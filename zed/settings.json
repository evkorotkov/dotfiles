  "wrap_guides": [120],
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_size": 16,
  "buffer_font_family": "CodeNewRoman Nerd Font",
  "buffer_font_size": 14,
  "buffer_line_height": {
    "custom": 1.3
  },
  "load_direnv": "shell_hook",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "format_on_save": "off",
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "diagnostics": false,
        "formatting": true
      }
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "rubocop",
        "tailwindcss-language-server",
        "!solargraph"
      ]
    }
  },
  "terminal": {
    "copy_on_select": false,
    "line_height": "standard"
  }
}
